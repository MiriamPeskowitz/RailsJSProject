  <% @soupkitchen.comments.each do |comment| %>
 
     <p>Title: <%= comment.title %><br>
     Comment: <%= comment.content %><br>
     Name: <%= comment.user.first_name %>
    
    <br>
    <br>
     </p>
  <% end %>


<br>

