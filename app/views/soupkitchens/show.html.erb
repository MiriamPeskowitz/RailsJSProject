<p>
<%= @soupkitchen.name %><br>
<%= @soupkitchen.address %><br>
<%= @soupkitchen.city  %><br>
<%= @soupkitchen.state  %><br>
<%= @soupkitchen.zipcode %><br>
<%= @soupkitchen.phone  %><br>
</p>

<h3><%= pluralize(@soupkitchen.comments.count, "Review")%></h3> <br>

<% @soupkitchen.comments.each do |comment| %>
    <p>
        Review by: <%= comment.user.first_name %> <br>
        <strong><%= comment.title %></strong>  <br>
        <%= comment.content %> 
        <br>
    </p> 
    <div class="rating"  
      <% if current_user.id == comment.user_id %>
          <h4>This is your review. Want to add a rating? (1-5, 5's the best.)</h4>

          <%= form_for(@soupkitchen) do  |f| %>
          
              <p>
                  <%= f.label :rating, "Rate #{@soupkitchen.name}." %>
                  <%= f.number_field :rating, in: 0..5 %>
                  
                  <%= f.submit %>
              </p>
          <% end %>    
      <% end %> 
    </div>  <br>
  
<% end %>
<br>
<%= link_to "Review #{@soupkitchen.name}", new_soupkitchen_comment_path(@soupkitchen) %><br>

<%= link_to 'See and Review other soupkitchens', soupkitchens_path %>
 