<!DOCTYPE html>
<html>
  <head>
    <title>Soupkitchens</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<!--nav bar and signup/signin --->  

<nav class="navbar navbar-default">
    <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <a class="navbar-brand" href="#">Soupkitchens of Philly</a>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Home', root_path %></li>

        <% if current_user %>

          <li> <%= current_user.first_name %></li>
           <li><%= link_to "Logout", logout_path, method: :delete %></li>

        <% else %>
            <li> <%= link_to "Sign Up", new_user_path %></li>
            <li> <%= link_to "Sign In", signin_path %></li>
            <li><%= link_to "Sign in/Sign up with Twitter", "/auth/twitter" %></li>
        <% end %>
        </ul>
    </div>
  </div>
</nav>



    <div>
      <div class="flash"> <% flash.each do |name, message| %>
        <div class="<%= name %>"><%= message %></div>
          <% end %>
      </div>

      <%= yield %>
    </div>
  </body>
  <footer>
  </footer>
</html>


