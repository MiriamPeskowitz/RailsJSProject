<!DOCTYPE html>
<html>
  <head>
    <title>Soupkitchens</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<!--nav bar and signup/signin --->      
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
           <!-- <span class="sr-only">Toggle navigation</span>-->
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if current_user %>  
            
                <p class="navbar-brand"> Welcome <%= current_user.first_name.capitalize %>  
                   <%= link_to "Home", root_path %>
                   <%= link_to "Logout", logout_path, method: :delete %>
                   <!-- tried button_to -->
                </p>
                
            <% else %>  
                <p class="navbar-brand"> 
                    <%= link_to "Home   ", root_path %>
                    <%= link_to "Sign Up", new_user_path %>
                    <%= link_to "Sign In", signin_path %>
                    <%= link_to " or Sign in/Sign up with Twitter", "/auth/twitter" %>
               </p>
            <% end %>
            </div>

           <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav">  </ul> 
         
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>



    <div>
      <div class="flash"> <% flash.each do |name, message| %>
        <div class="<%= name %>"><%= message %></div>
          <% end %>
      </div>

      <%= yield %>
    </div>
  </body>
  <footer>
  </footer>
</html>
