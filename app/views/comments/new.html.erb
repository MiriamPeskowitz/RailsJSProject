<h2>Write a comment about <%= @soupkitchen.name %> </h2>


<%= form_for([@soupkitchen, @comment]) do |f| %> 

  
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    <br>
    <%= f.label :content %><br>
    <%= f.text_area :content, cols: 40, rows: 15 %>


  <%= f.submit %>
<% end %>

